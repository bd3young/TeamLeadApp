                            <x:String>2300</x:String>
                            <x:String>2330</x:String>
                            <x:String>2400</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center" TextColor="Black" Text="Shift Ends" FontSize="Medium"/>
                    <Picker TextColor="Black" SelectedItem="{Binding Officer.ShiftEnd, Mode=TwoWay}" Title="Enter Time" TitleColor="LightGray" HorizontalTextAlignment="Center" HorizontalOptions="Fill" FontSize="Medium">
                        <Picker.Items>
                            <x:String>0100</x:String>
                            <x:String>0130</x:String>
                            <x:String>0230</x:String>
                            <x:String>0300</x:String>
                            <x:String>0330</x:String>
